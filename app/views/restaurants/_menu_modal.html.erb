<div class="modal fade"
      id="click-modal"
      tabindex="-1"
      aria-labelledby="click-modal"
      aria-hidden="true"
      role="dialog"
      data-current-menu-id="any"
>
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header flex-column">
          <h5 class="modal-title" id="click-modal"></h5>
          <p class="text-muted modal-price">SGD</p>
          <button
            type="button"
            class="close"
            data-dismiss="modal"
            aria-label="Close"
          >
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <form>
            <div class="form-group">
              <label for="menu-name" class="col-form-label">Quantity</label>
              <input
                type="number"
                class="form-control"
                id="menu-amount"
                min="1"
              />
            </div>
          </form>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">
            Close
          </button>
          <button
            type="button"
            data-dismiss="modal"
            id="add-to-cart"
            class="btn btn-primary btn-modal"
          >
            Add to Cart
          </button>
        </div>
      </div>
    </div>
  </div>