<div class="modal fade"
      id="click-modal"
      tabindex="-1"
      aria-labelledby="click-modal"
      aria-hidden="true"
      role="dialog"
      data-current-menu-id="any"
>
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header d-flex flex-wrap justify-content-between align-items-start">
        <div>
          <h5 class="modal-title font-weight-bold" id="click-modal"></h5>
          <p class="mt-3 modal-price text-success font-weight-bold"></p>
        </div>
        <div>
          <button
            type="button"
            class="close"
            data-dismiss="modal"
            aria-label="Close"
          >
            <span aria-hidden="true">&times;</span>
          </button>        
        </div>

      </div>
      <div class="modal-body">
        <form>
          <div class="form-group">
            <label for="menu-name" class="col-form-label">How many?</label>
            <input
              type="number"
              class="form-control"
              id="menu-amount"
              min="1"
              placeholder="0"
            />
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-light rounded-pill px-4 py-2" data-dismiss="modal">
          Close
        </button>
        <button
          type="button"
          data-dismiss="modal"
          id="add-to-cart"
          class="btn btn-dark rounded-pill px-4 py-2"
        >
          Add to Cart
        </button>
      </div>
    </div>
  </div>
</div>
