<% content_for :page_title do %>
  <%= @restaurant.name %> |
<% end %>

<section class="menu-top d-flex flex-wrap align-items-center justify-content-between">
</section>
<div class="header-restaurant border-bottom">
  <div class="d-flex justify-content-between m-auto" style="height: 100%; max-width: 1024px;">
    <div class="d-flex position-relative align-items-center">
      <div class="d-flex justify-content-between">
        <div class="bd-highlight">Delivery</div>
        <div class="bd-highlight" style="padding-left: 10px">üìç<%= @parameter %></div> 
      </div>
    </div>
  </div>
</div>

<div class="container-restaurant">
  <div class="row">
    <div class="col-sm-6">
      <div class="resto-card">
        <div class="card-body">
          <h1 id="restaurant-id" data-restaurant-id="<%= @restaurant.id %>" class="resto-name font-weight-bold mt-2 mb-0"><%= @restaurant.name %></h1>
          <p class="card-text"><%= @restaurant.address %></p>
          <img src="<%= @restaurant.img_url %>" alt="" width="300" height="200">
          <div class="delivery-time">
            <span class="min-time"><%= @restaurant.min_time %></span>-<span class="max-time"><%= @restaurant.max_time %> min</span>
            <h5><%= @restaurant.category %> <%= 'üåù' * @restaurant.rating %></h5>
          </div>
        </div>
      </div>
    </div>
    <div class="d-flex p-10 mt-4">
      <div class="card" style="width: 30rem; height: 100%;">
        <div class="card-body">
          <h2 class="order-summary">Your Order Summary</h2>
          <div class="mt-5">
            <p>Added item list:<br><span id="added-menu"></span></p>
            <p style="margin-top: 70px;">Quantity: <span id="total-count">0</span></p>
            <p>Total price: $SGD <span id="total-price">0</p>
          </div>
          <button class="btn btn-primary mt-5" style="witdth: 30rem;" id="click-check-out">Check out</button>
        </div>
      </div>
    </div>  
  </div>


  <div class="row mt-5">
    <% @menu_items.each do |menu_item| %>
    <%= render 'menu_item_card', menu_item: menu_item %>  
    <%= render 'menu_modal', menu_item: menu_item %>
    <% end %>
  </div>
</div>

