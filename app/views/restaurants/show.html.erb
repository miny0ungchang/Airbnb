<section class="restaurant-container">
  <div class="container">
    <div class="col-12 d-flex flex-wrap px-0 py-4">
      <div class="restaurant-info col-12 col-md-6 px-0">
        <div class="restaurant-delivery-price text-success">
          <p class="mb-1">FREE DELIVERY</p>
        </div>
        <h1 class="restaurant-name font-weight-bold mb-0"> <%= @restaurant.name %> </h1>
        <div class="restaurant-info-pills-container mt-3">
          <div class="restaurant-info-pills border border-black-50 restaurant-delivery-time">
            <p><span class="text-secondary mr-1"><i class="fas fa-clock"></i></span>  <%= @restaurant.min_time %></span>-<span class="max-time"><%= @restaurant.max_time %> MIN</p>
          </div>
          <div class="restaurant-info-pills border border-black-50 restaurant-address">
            <p><span class="text-secondary mr-1"><i class="fas fa-map-marker-alt"></i></span> <%= @restaurant.address %></p>
          </div>
          <div class="restaurant-info-pills border border-black-50 restaurant-rating">
            <p> <%= '‚òÖ' * @restaurant.rating %> </p>
          </div>
        </div>
      </div>
      <div class="col-12 col-md-6">
        <div class="restaurant-order-summary border border-black-50 p-4">
          <h5 class="font-weight-bold">YOUR ORDERS</h5>
          <p id="added-menu"></p>
          <div class="d-flex flex-wrap justify-content-between align-items-last mt-5">
            <div class="restaurant-total-items">
              <p class="mb-1">TOTAL ITEMS: <span id="total-count">0</span></p>
              <h4 class="text-success font-weight-bold">SGD <span id="total-price"></h4>
            </div>
            <div class="restaurant-checkout-btn mt-4">
              <a href="#" class="btn btn-dark rounded-pill px-4 py-2">CHECK OUT</a>
            </div>
          </div>
        </div>
      </div>    
    </div>
  </div>
</section>

<div class="container-restaurant">
  <div class="row">
    <div class="col-sm-6">
      <div class="resto-card">
        <div class="card-body">
          <h1 class="resto-name font-weight-bold mt-2 mb-0"><%= @restaurant.name %></h1>
          <p class="card-text"><%= @restaurant.address %></p>
          <img src="<%= @restaurant.img_url %>" alt="" width="300" height="200">
          <div class="delivery-time">
            <span class="min-time"><%= @restaurant.min_time %></span>-<span class="max-time"><%= @restaurant.max_time %> min</span>
            <h5><%= @restaurant.category %> <%= 'üåù' * @restaurant.rating %></h5>
          </div>
        </div>
      </div>
    </div>
    <div class="d-flex p-10 mt-4">
      <div class="card" style="width: 30rem; height: 100%;">
        <div class="card-body">
          <h2 class="order-summary">Your Order Summary</h2>
          <div class="mt-5">
            <!-- <p>Added item list:<br><span id="added-menu"></span></p>-->
            <p style="margin-top: 70px;">Quantity: <span id="total-count">0</span></p>
            <p>Total price: $SGD <span id="total-price">0</p>
          </div>
          
        </div>
      </div>
    </div>  
  </div>


  <div class="row mt-5">
    <% @menu_items.each do |menu_item| %>
    <%= render 'menu_item_card', menu_item: menu_item %>  
    <%= render 'menu_modal', menu_item: menu_item %>
    <% end %>
  </div>
</div>

